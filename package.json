{
  "name": "my-razzle-app",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start": "razzle start",
    "build": "razzle build",
    "test": "razzle test --env=jsdom",
    "start:prod": "cross-env NODE_ENV=production node build/server.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier \"src/**/*.{js,jsx,json,css,scss,md,mdx}\"",
    "prettier:fix": "npm run prettier -- --write",
    "validate": "npm run lint && npm run prettier -- --list-different"
  },
  "dependencies": {
    "@loadable/component": "^5.12.0",
    "@loadable/server": "^5.12.0",
    "common-tags": "^1.8.0",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "express-static-gzip": "^2.0.6",
    "lazysizes": "^5.2.0",
    "razzle": "^3.0.0",
    "razzle-plugin-svg-react-component": "^1.0.3",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-helmet": "^5.2.1",
    "react-router-dom": "^5.0.1",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@loadable/babel-plugin": "^5.12.0",
    "@loadable/webpack-plugin": "^5.12.0",
    "@types/jest": "^25.1.2",
    "@typescript-eslint/eslint-plugin": "1.x",
    "@typescript-eslint/parser": "1.x",
    "babel-eslint": "10.x",
    "cross-env": "^7.0.0",
    "eslint": "6.x",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-react-app": "^5.2.0",
    "eslint-plugin-flowtype": "3.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "1.x",
    "husky": "^4.2.1",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-webp-webpack-plugin": "^3.3.1",
    "imagemin-webpack-plugin": "^2.4.2",
    "lint-staged": "^10.0.7",
    "prettier": "^2.3.1",
    "razzle-plugin-compression": "^1.0.0",
    "razzle-plugin-disable-sourcemaps-production": "^1.0.0",
    "razzle-plugin-purgecss": "^1.0.1",
    "responsive-loader": "^1.2.0",
    "sharp": "^0.24.0",
    "url-loader": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "npm run lint:fix",
      "git add"
    ],
    "src/**/*.{js,jsx,json,css,scss,md,mdx}": [
      "npm run prettier:fix",
      "git add"
    ]
  }
}
